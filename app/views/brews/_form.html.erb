<%= form_for @brew, :html => { :class => "form-horizontal brew" } do |f| %>
<div class="container-fluid">
  <div class="col-lg-10">
  <% if @brew.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@brew.errors.count, "error") %> prohibited this brew from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @brew.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :content, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :content, :class => 'form-control' %>
    </div>
    <%=f.error_span(:content) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                brews_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
<div ng-controller="YeastController as yeastCtrl" class="col-lg-4">
  <article class="main-content" role="main">
            <section class="row">
                <div class="content">
                    <div class="bookmarks-list">
                        <h3>Yeast Types: <input ng-model="yeast.name"/></h3>
                        <ul>
                            <li ng-repeat="y in yeast | filter:{name: yeast.name} | limitTo:quantity" class="" ng-show="yeast.name">
                                <a ng-click="open(yeast)">{{y.name}}</a>
                                  <!--MODAL WINDOW--> 
                                  <script type="text/ng-template" id="myModalContent.html">
                                    <div class="modal-header">
                                      <h3>{{yeast.name}}</h3>
                                    </div>
                                    <div class="modal-body"><br/>
                                      {{yeast.description}}
                                    </div>
                                    <div class="modal-footer">

                                    </div>
                                  </script>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>
  </article>
</div>
<div ng-controller="HopController as hopCtrl" class="col-lg-4">
  <article class="main-content" role="main">
            <section class="row">
                <div class="content">
                    <div class="bookmarks-list">
                        <h3>Hops Types: <input ng-model="hop.name"/></h3>
                        <ul>
                            <li ng-repeat="y in hop | filter:{name: hop.name} | limitTo:quantity" class="" ng-show="hop.name">
                                <a>{{y.name}}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>
  </article>
</div>
<div ng-controller="FermentableController as femCtrl" class="col-lg-4">
  <article class="main-content" role="main">
            <section class="row">
                <div class="content">
                    <div class="bookmarks-list">
                        <h3>Fermentable Types:<input ng-model="fem.name"/></h3>
                        <ul>
                            <li ng-repeat="y in ferment | filter:{name: fem.name} | limitTo:quantity" class="" ng-show="fem.name">
                                <a href="">{{y.name}}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>
    </article>
  </div>
  </div>
</div>

