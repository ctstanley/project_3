<h1>Log In</h1><%= form_tag sessions_path do %>
<div class="col-lg-10">
<div class="form-group">
<%= label_tag :email %>
<%= text_field_tag :email %>
</div>
  <div class="form-group">
    <%= label_tag :password %>
<%= password_field_tag :password %>
</div>
  <div class="form-group">
  	<div class="col-lg-offset-2 col-lg-10">
    <%= submit_tag "Log In", :class => 'btn btn-default' %>
    </div>
</div>
</div>
<% end %>